import java.util.Scanner;
public class Main3
{
    public static void main(String[] args) {
         Scanner scan =new Scanner(System.in);
         while(true){
             System.out.println("Введите два числа чтобы я их перемножила");
         int ch1 =scan.nextInt();
         int ch2 =scan.nextInt();
         int ymnog = ch1*ch2;
         System.out.println(ch1+"*"+ch2+"="+ymnog);
         System.outprintln("Введите третье число, чтобы я разделила ваше полученное число");
         int delu =scan.nextInt();
         System.out.println(ymnog+"/"+delu+"="+(ymnog/delu));
         System.out.println("Введите число 1 чтобы продолжить умножение или любое другое число чтобы закончить");
         int NachaloOrKonec = scan.nextInt();
            if(NachaloOrKonec>1){
                System.out.println("Вы закончили");
                break;
            }
         } 
    }
}
